<h1>Station Index</h1>

<p><a href="#">All Trips</a> | <a href="/stations/new">Create New Station</a> | <a href="/">Home</a></p>


<div class="container">

  <table class="table">

    <thead>
      <th>#</th>
      <th>Station</th>
      <th>Dock Count</th>
      <th>City</th>
      <th>Installation Date</th>
    </thead>

    <tbody>
    <% @stations.each do |station| %>
      <tr>
        <th scope="row"><%= station.id %></th>
          <td><a href="/stations/<%= station.id %>"><%= station.name %></a></td>
          <td><%= station.dock_count %></td>
          <td><%= station.city_id %></td>
          <td><%= station.installation_date %></td>
          <td><button class="type="button"><a href="/stations/<%= station.id %>/edit">Edit</a></button></td>
          <td><form action="/stations/<%= station.id %>" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            <input type="submit" value="Delete" />
            </form></td>
    <% end %>
  </tbody>

</table>

</div>
